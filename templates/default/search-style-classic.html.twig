{% extends "base.html.twig" %}

{% block body %}
<!--=================================
style classic -->
<section class="banner banner-bg-splash bg-holder bg-overlay-black-30" style="background-image: url(images/banner-01.jpg);">
  <div class="container h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-lg-7 col-sm-10 text-center align-self-center">
        <h1 class="text-white mb-3 bg-slider-title">Let us Guide you Home</h1>
        <span class="text-white bg-slider-sub-title">Don't worry. We've done this for millions of times.</span>
        <div class="search mt-4">
          <a href="#">Search </a>
          <input type="text" class="form-control border-0" placeholder="Search for Homes by Address, City, Zip Code or MLS#....">
        </div>
      </div>
    </div>
  </div>
</section>
<!--=================================
style classic -->

<!--=================================
newsletter -->
<section class="py-5 bg-primary">
  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <h3 class="text-white mb-0">Sign up to our newsletter to get the latest news and offers.</h3>
      </div>
      <div class="col-md-7 mt-3 mt-md-0">
        <div class="newsletter">
          <form>
            <div class="form-group mb-0">
              <input type="email" class="form-control" placeholder="Enter email">
            </div>
            <button type="submit" class="btn btn-dark b-radius-left-none">Get notified</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<!--=================================
newsletter -->
{% endblock %}